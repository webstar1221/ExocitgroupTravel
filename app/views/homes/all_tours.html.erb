<section class="finderForm">
<%= render partial: 'shared/search'  %>
</section>

<section class="destinations">

  <div class="container-fluid px-md-3">

    <div class="row">
     
     
      <div class="col-lg-3 mt-lg-5">
      <%# <%= render partial: "shared/filters" %> 
      </div>


      <div class="col-lg-9">
        <div class="row mt-2">

          <div class="col-lg-8 px-1">
            <h1 class="headingOne yellow">EXPLORE THE WORLD YOUR WAY</h1>
          </div>
          <div class="col-lg-8 ">
          </div>

          <div class="col-lg-12 p-0">
            <hr>
          </div>

          <div class="col-lg-12">
            <h1 class="headingOne main capitilize">All Trips</h1>
          </div>   

          <% if @tours.present? %>
            <% @tours.each do |tour| %>
          <div class="col-md-4 mt-3">
              <%= render partial: "shared/tour", locals: {tour: tour} %>
            </div>
          <% end %>
          <% else %>
            <h3 class="text-center mt-3"> <%= @msg %></h3>
          <% end %>   
        </div>
        
      </div>

    </div>

    <div class="row mt-5">
      <div class="col-md-12 d-flex align-items-center justify-content-center">
        <div class="digg_pagination">
        <% if @tours.present? %>
        <%= will_paginate @tours, :page_links => false %>
        <% end %>
        </div>
        </div>
    </div>
  </div>


</section>