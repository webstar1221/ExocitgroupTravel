<%= form_for [:admin, @country] do |form| %>
    <div class="form-group">
      <%= form.label :name %><br>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
    <%= form.label :region_id %><br>
    <%= form.select(:region_id, options_for_select(Region.active.map{|c|[c.region_name, c.id]}, { selected: @country.region&.id } ), { }, { class: 'form-control' }) %>
    </div>

    <div class="form-group">
    <%= form.label :active, 'Active', class: 'form-label' %><br/>
    <%= form.select(:active, options_for_select([['True', true], ['False', false]], {selected: :active}),   {}, { class: 'form-control'})  %>
   </div>
  
  
    <div>
      <%= form.submit class: "btn btn-primary mt-2" %>
    </div>
  <% end %>