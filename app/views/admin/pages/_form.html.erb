<%= form_for [:admin, @page] do |form| %>

    <div class="form-group">
      <%= form.label :name %><br>
      <%= form.text_field :name, class: "form-control", placeholder: "Page Name" %>
    </div>

    <div class="form-group">
    <%= form.label :content %><br>
    <%= form.cktext_area :content, class: "form-control", placeholder: "Content" %>
    </div>

  <div class="form-group">
    <%= form.label :active, 'Active', class: 'form-label' %><br/>
    <%= form.select(:active, options_for_select([['True', true], ['False', false]], {selected: :active}),   {}, { class: 'form-control'})  %>
   </div>


    <div>
      <%= form.submit class: "btn btn-primary mt-2" %>
    </div>
  <% end %>